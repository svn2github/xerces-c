       IDAttrImpl.hpp \
       IDAttrMapImpl.hpp \
       IDAttrNSImpl.hpp \
       IDCDATASectionImpl.hpp \
       IDCharacterDataImpl.hpp \
       IDCommentImpl.hpp \
       IDDeepNodeListImpl.hpp \
       IDDocumentFragmentImpl.hpp \
       IDDocumentImpl.hpp \
       IDDocumentTypeImpl.hpp \
       IDDOMImplementation.hpp \
       IDElementImpl.hpp \
       IDElementNSImpl.hpp \
       IDEntityImpl.hpp \
       IDEntityReferenceImpl.hpp \
       IDNamedNodeMapImpl.hpp \
       IDNodeImpl.hpp \
       IDNodeIteratorImpl.hpp \
       IDNodeListImpl.hpp \
       IDNotationImpl.hpp \
       IDProcessingInstructionImpl.hpp \
       IDRangeImpl.hpp \
       IDTextImpl.hpp \
       IDTreeWalker.hpp \
       IDXMLDeclImpl.hpp

IDOM_C_FILES = \
       IDDeepNodeListPool.c


IDOM_CPP_OBJECTS = \
       IDAttrImpl.$(TO) \
       IDAttrMapImpl.$(TO) \
       IDAttrNSImpl.$(TO) \
       IDCDATASectionImpl.$(TO) \
       IDCharacterDataImpl.$(TO) \
       IDChildNode.$(TO) \
       IDCommentImpl.$(TO) \
       IDDeepNodeListImpl.$(TO) \
       IDDocumentFragmentImpl.$(TO) \
       IDDocumentImpl.$(TO) \
       IDDocumentTypeImpl.$(TO) \
       IDDOMImplementation.$(TO) \
       IDElementImpl.$(TO) \
       IDElementNSImpl.$(TO) \
       IDEntityImpl.$(TO) \
       IDEntityReferenceImpl.$(TO) \
       IDNamedNodeMapImpl.$(TO) \
       IDNodeIDMap.$(TO) \
       IDNodeImpl.$(TO) \
       IDNodeIteratorImpl.$(TO) \
       IDNodeListImpl.$(TO) \
       IDNodeVector.$(TO) \
       IDNotationImpl.$(TO) \
       IDOM_DOMException.$(TO) \
       IDOM_RangeException.$(TO) \
       IDParentNode.$(TO) \
       IDProcessingInstructionImpl.$(TO) \
       IDRangeImpl.$(TO) \
       IDStringPool.$(TO) \
       IDTextImpl.$(TO) \
       IDTreeWalker.$(TO) \
       IDXMLDeclImpl.$(TO)


all::	includes $(IDOM_CPP_OBJECTS)

includes::	pubheaders $(IDOM_C_FILES)

pubheaders::
	-mkdir -p $(XML_INC_DIR)/$(MODULE)
	$(CP) $(IDOM_CPP_PUBHEADERS) $(IDOM_C_FILES) $(XML_INC_DIR)/$(MODULE)

# this may generate unnecessary dependencies, but it makes life easier
depend:: includes
	$(MAKE_DEPEND) $(XML_INCL)  *.cpp > $(DEPFILE)

clean::
	@echo "Making clean in $(MODULE) ..."
	$(RM2) $(addprefix $(XML_OBJ_DIR)/,$(IDOM_CPP_OBJECTS))

distclean::	clean
	$(RM) Makefile $(DEPFILE)
	@echo "Removing all $(MODULE) header files ..."
	$(RM2) $(addprefix $(XML_INC_DIR)/$(MODULE)/,$(IDOM_CPP_PUBHEADERS))

install::
	-mkdir -p $(PREFIX)/$(MODULE)
	$(CP) $(IDOM_CPP_PUBHEADERS) $(IDOM_C_FILES) $(PREFIX)/$(MODULE)
